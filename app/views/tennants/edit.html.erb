<div align= center id="tennant_edit">
	<div align="center" id="edit_account">
		<h1>EDIT ACCOUNT</h1>
	</div>
	<hr>
		<h2>Need to edit your account information?</h2>
	<!-- displays current users information and give the user the ability to change the info -->
		<div id="form_edit">
			<%= form_for @tennant, html: {method: :put} do |f| %>
				<div class="field">
					<%= f.label :first_name, "First Name" %>
					<%= f.text_field :first_name %>
				</div>
			
				<div class="field">
					<%= f.label :last_name, "Last Name" %>
					<%= f.text_field :last_name %>
				</div>
			
				<div class="field">
					<%= f.label :email, "Email" %>
					<%= f.text_field :email %>
				</div>
				
				<div class="field">
					<%= f.label :password, "Password" %>
					<%= f.text_field :password %>
				<div/>
			
				<div id="edit_act_btn">
					<%= f.submit(:class => "btn_box") %>
				</div>
			<% end %>
		</div>
</div>
