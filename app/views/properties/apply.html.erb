<h1>apply here<h1>

<h3>Enter your name and email to have the application emailed to you</h3>

<div id="applicationForm">
	<%= form_tag '/properties/apply' do %>

  <div class="field">
    <%= label_tag :name, "Name" %><br />
    <%= text_field_tag :name %>
  </div>
  
  <div class="field">
    <%= label_tag :email, "Email" %><br />
    <%= text_field_tag :email %>
  </div>
  
  <div class="actions">
    <%= submit_tag "Send" %>
  </div>

  <% end %>
</div>
